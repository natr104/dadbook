<div>
    Activity: <%= @outing.activity.name %>
    <br>
    When: <%= outing_date_time(@outing) %>
    <br>
    Created by: <%= @outing.user.name %>
    <br>
    Children attending: <% @outing.user.children.each do |c| %>
    <%= c.name %>
    <% end %>
    <br>
    <%= link_to "Edit", action: 'edit' %>
    <br>
    <%= link_to "Delete", { action: "destroy", id: @outing.id }, method: "delete", data: { confirm: "Delete outing?" } %>
    <br>
    <%= link_to 'Home', '/' %>
</div>