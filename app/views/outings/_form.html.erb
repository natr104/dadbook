<%= form_for @outing do |f| %>
    <%= f.hidden_field :user_id %>
    <%= f.collection_select :activity_id, Activity.all, :id, :name, :include_blank => true %>
    <%= f.fields_for :activities, @outing.activities.build do |activities_fields| %>
        <%= activities_fields.text_field :name %>
    <% end %>
    <br>
    <%= f.datetime_local_field :outing_date %>
    <br>
    <%= f.submit %>
<% end %>